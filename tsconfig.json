{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "lib": [
      "es6",
      "dom",
      "es7",
      "es2017"
    ],
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "brave-ui": ["node_modules/brave-ui/src"],
      "brave-ui/*": ["node_modules/brave-ui/src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./components/definitions"
    ],
    // optional
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "./components/definitions/*"
  ]
}
